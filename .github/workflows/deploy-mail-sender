name: Mail Sender - Build

on: 
  workflow_dispatch:
    inputs:
      version:
        description: Mail Sender Deploy
        default: v1.0.0
        required: true

jobs:
  build-and-test:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v1

    - name: Setup .NET Core
      uses: actions/setup-dotnet@v1
      with:
        dotnet-version: 3.1.100

    - name: Build
      run: dotnet build --configuration Release
      working-directory: ./LetsDoIt.MailSender

    - name: Generate nuget package
      run: dotnet pack --configuration Release -o nupkg
      working-directory: ./LetsDoIt.MailSender

    - name: Publish nuget package
      run: find . -name *.nupkg -type f -print0 | xargs -0 -I pkg dotnet nuget push pkg -k $nuget_api_key -s "https://api.nuget.org/v3/index.json" --skip-duplicate
      env:
        nuget_api_key: ${{ secrets.LETS_DO_IT_NUGET_API_KEY }}
      working-directory: ./LetsDoIt.MailSender/nupkg
